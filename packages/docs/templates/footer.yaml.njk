{% if not hideFeedback %}
- id: feedback_divider
  type: Divider
- id: feedback_title
  type: Title
  visible:
    _not:
      _state: feedback_sent
  style:
    textAlign: center
  properties:
    content: Was this helpful?
    level: 3
- id: feedback_rating_box
  type: Box
  style:
    margin: auto
  layout:
    size: 300
  areas:
    content:
      justify: space-around
      align: middle
      gutter: 16
      blocks:
        - id: cry_anchor
          type: Anchor
          visible:
            _not:
              _state: feedback_sent
          layout:
            size: auto
          style:
            fontSize:
              _if:
                test:
                  _eq:
                    - _state: feedback.score
                    - cry
                then: 48
                else: 32
          properties:
            title: 😭
          events:
            onClick:
              - id: resize
                type: SetState
                params:
                  feedback.score: cry
        - id: sad_anchor
          type: Anchor
          visible:
            _not:
              _state: feedback_sent
          layout:
            size: auto
          style:
            fontSize:
              _if:
                test:
                  _eq:
                    - _state: feedback.score
                    - sad
                then: 48
                else: 32
          properties:
            title: 😟
          events:
            onClick:
              - id: resize
                type: SetState
                params:
                  feedback.score: sad
        - id: smile_anchor
          type: Anchor
          visible:
            _not:
              _state: feedback_sent
          layout:
            size: auto
          style:
            fontSize:
              _if:
                test:
                  _eq:
                    - _state: feedback.score
                    - smile
                then: 48
                else: 32
          properties:
            title: 😊
          events:
            onClick:
              - id: resize
                type: SetState
                params:
                  feedback.score: smile
        - id: happy_anchor
          type: Anchor
          visible:
            _not:
              _state: feedback_sent
          layout:
            size: auto
          style:
            fontSize:
              _if:
                test:
                  _eq:
                    - _state: feedback.score
                    - happy
                then: 48
                else: 32
          properties:
            title: 😀
          events:
            onClick:
              - id: resize
                type: SetState
                params:
                  feedback.score: happy
        - id: feedback.email
          type: TextInput
          visible:
            _and:
              - _if_none:
                  - _state: feedback.score
                  - false
              - _not:
                  _state: feedback_sent
          properties:
            title: Email
            placeholder: Your email address
        - id: feedback.text
          type: TextArea
          visible:
            _and:
              - _if_none:
                  - _state: feedback.score
                  - false
              - _not:
                  _state: feedback_sent
          properties:
            title: Feedback
            rows: 5
            placeholder:
              _if:
                test:
                  _or:
                    - _eq:
                        - _state: feedback.score
                        - happy
                    - _eq:
                        - _state: feedback.score
                        - smile
                then: What made you smile?
                else: How can we improve?
        - id: fb_box
          type: Box
          visible:
            _and:
              - _if_none:
                  - _state: feedback.score
                  - false
              - _not:
                  _state: feedback_sent
          layout:
            contentJustify: end
          blocks:
            - id: feedback.send
              type: Button
              requests:
                - id: lowdefy_api_feedback
                  type: AxiosHttp
                  connectionId: lowdefy_api_marketing
                  properties:
                    data:
                      text:
                        _state: feedback.text
                      score:
                        _state: feedback.score
                      email:
                        _state: feedback.email
                      source: docs
                      type: Docs feedback
                - id: discord_channel_feedback
                  type: AxiosHttp
                  connectionId: discord_channel
                  properties:
                    data:
                      content: 'New feedback on docs'
              layout:
                size: auto
              properties:
                title: Send
                icon: SendOutlined
                color: '#1890ff'
              events:
                onClick:
                  - id: post_data
                    type: Request
                    params:
                      - lowdefy_api_feedback
                      - discord_channel_feedback
                  - id: set_feedback
                    type: SetState
                    params:
                      feedback_sent: true
        - id: feedback_sent_thank_you
          type: Alert
          visible:
            _not:
              _not:
                _state: feedback_sent
          properties:
            message: Thank you! You feedback help us make things better ✨
            type: success
{% if filePath %}
- id: edit_on_gh_box
  type: Box
  style:
    lg:
      paddingRight: 40
  layout:
    contentJustify: end
  blocks:
    - id: edit_on_github
      type: Anchor
      layout:
        size: auto
      properties:
        title: Edit this page on Github
        href: https://github.com/lowdefy/lowdefy/blob/main/packages/docs/{{ filePath }}
        newTab: true
{% endif %}

