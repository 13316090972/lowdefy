              properties:
                size: large
                placeholder: Enter your email
                label:
                  disabled: true
            - id: footer_cta_button
              type: Button
              visible:
                _not:
                  _global: newsletter_subscribed
              requests:
                - id: lowdefy_api_subscribe
                  type: AxiosHttp
                  connectionId: lowdefy_api_marketing
                  properties:
                    data:
                      type: Newsletter subscription
                      email:
                        _state: footer_cta_input
                      source: docs
                      page_id:
                        _var: pageId
                - id: discord_channel_subscribe
                  type: AxiosHttp
                  connectionId: discord_channel
                  properties:
                    data:
                      content: 'New newsletter subscription from docs'
              layout:
                flex: 0 1 auto
              properties:
                title: Subscribe
                color: '#1890ff'
                size: large
              events:
                onClick:
                  - id: post_data
                    type: Request
                    params:
                      - lowdefy_api_subscribe
                      - discord_channel_subscribe
                  - id: set_subscribed
                    type: SetGlobal
                    params:
                      newsletter_subscribed: true
            - id: subscribed_thank_you
              type: Alert
              layout:
                flex: 0 1 350px
              visible:
                _not:
                  _not:
                    _global: newsletter_subscribed
              properties:
                message: Thanks! 👏  We'll keep you updated with the latest Lowdefy news.
                type: success
