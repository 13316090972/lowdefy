{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://lowdefy.com/appSchema.json",
  "type": "object",
  "title": "Lowdefy App Schema",
  "definitions": {
    "connection": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        }
      }
    },
    "block": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        },
        "layout": {
          "type": "object"
        },
        "blocks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/block"
          }
        },
        "requests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/request"
          }
        },
        "mutations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/mutation"
          }
        },
        "actions": {
          "type": "object"
        },
        "areas": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "object",
              "properties": {
                "blocks": {
                  "$ref": "#/definitions/block"
                }
              }
            }
          }
        }
      }
    },
    "request": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type",
        "connectionId"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "connectionId": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        }
      }
    },
    "mutation": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type",
        "connectionId"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "connectionId": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        }
      }
    },
    "menuLink": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "pageId": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        }
      }
    },
    "menuGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/menuItem"
          }
        }
      }
    },
    "menuItem": {
      "$anyOf": [
        {
          "$ref": "#/definitions/menuGroup"
        },
        {
          "$ref": "#/definitions/menuLink"
        }
      ]
    },
    "menu": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "properties": {
          "type": "object"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/menuItem"
          }
        }
      }
    }
  },
  "properties": {
    "global": {
      "type": "object"
    },
    "connections": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/connection"
      }
    },
    "menus": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/menu"
      }
    },
    "pages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/block"
      }
    }
  }
}